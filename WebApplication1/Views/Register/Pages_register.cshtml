
@{
    ViewBag.Title = "Pages_register";
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}
@model WebApplication1.Models.User.UserRegister
<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <a href="index.html">
                                <span><img src="assets/images/logo-dark.png" alt="" height="22"></span>
                            </a>
                            <p class="text-muted mb-4 mt-3">Don't have an account? Create your own account, it takes less than a minute</p>
                        </div>
                        @Html.ValidationSummary(true)
                        @using (Html.BeginForm("Pages_register", "Register", FormMethod.Post, new { @id = "RegisterForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <form action="/"  novalidate id="RegisterForm" method="post">

                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Username, new { @class = "username" })
                                    @Html.TextBoxFor(m => m.Username, new
                               {
                                    placeholder = "Username",
                                    title = "Enter your username",
                                    value = "",
                                    name = "username",
                                    id = "fullname",
                                    required = true,
                                    @class = "form-control"
                               })
                                </div>

                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Email, new { @class = "emailadress" })
                                    @Html.TextBoxFor(m => m.Email, new
                               {
                                    placeholder = "example@gmail.com",
                                    title = "Enter your email",
                                    value = "",
                                    type = "email",
                                    required = true,
                                    name = "email",
                                    id = "emailaddress",
                                    @class = "form-control"
                               })
                                </div>
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Password, new { @class = "password" })
                                    @Html.TextBoxFor(m => m.Password, new
                               {
                                    placeholder = "password",
                                    title = "Enter your password",
                                    value = "",
                                    type = "password",
                                    required = true,
                                    onblur = "verificaParole()",
                                    name = "password",
                                    id = "password",
                                    @class = "form-control"
                               })
                                </div>
                                <div class="form-group">
                                    <label for="password">Repeat Password</label>
                                    <input class="form-control" type="password" required id="repeat-password" placeholder="Repeat your Password" onblur="verificaParole()">
                                    <div id="error-message-match" class="error-message" style="display:none; color: red;">The passwords do not match!</div>
                                    <div id="error-message-length" class="error-message" style="display:none; color: red;">The password must be at least 8 characters long!</div>
                                    <div id="error-message-policy" class="error-message" style="display:none; color: red;">The password must contain at least one uppercase letter, one lowercase letter, one number, and one special character!</div>
                                </div>

                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="checkbox-signup">
                                        <label class="custom-control-label" for="checkbox-signup">I accept <a href="javascript: void(0);" class="text-dark">Terms and Conditions</a></label>
                                    </div>
                                </div>
                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary btn-block" href="/Home/Index" id="submit-button" type="submit"> Sign Up </button>
                                </div>

                            </form>
                        }
                            <div class="text-center">
                                <h5 class="mt-3 text-muted">Sign up using</h5>
                                <ul class="social-list list-inline mt-3 mb-0">
                                    <li class="list-inline-item">
                                        <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github-circle"></i></a>
                                    </li>
                                </ul>
                            </div>

                        </div> <!-- end card-body -->
                </div>
                <!-- end card -->

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p class="text-muted">Already have account?  <a href="pages-login.html" class="text-muted font-weight-medium ml-1">Sign In</a></p>
                    </div> <!-- end col -->
                </div>
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>

