<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Despre noi</h4>
                    <div class="breadcrumb__links">
                        <a href="@Url.Action("")">Acasă</a>
                        <span>Despre noi</span>
                    </div>
