@{
    ViewBag.Title = "AddUser";
    var usersList = ViewBag.usersList;
}
@model WebApplication1.Models.AddUser

<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="contact__form">
                    @Html.ValidationSummary(true)
                    @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form action="#">
                            <div class="row">
                                <div class="form-group col-lg-12">
                                    @Html.TextBoxFor(m => m.Username, new
                               {
                                    type = "text",
                                    @class = "form-control",
                                    placeholder = "Username",
                                    required = true,
                               })
                                </div>
                                <div class="form-group col-lg-12">
                                    @Html.TextBoxFor(m => m.Password, new
                               {
                                    type = "text",
                                    @class = "form-control",
                                    placeholder = "Password",
                                    required = true,
                               })
                                </div>
                                <div class="form-group col-lg-12">
                                    @Html.TextBoxFor(m => m.Level, new
                               {
                                    type = "number",
                                    @class = "form-control",
                                    placeholder = "Level",
                                    min = 0,
                                    max = 2,
                                    required = true,
                               })
                                </div>
                                <div class="col-lg-12">
                                    <button type="submit" class="site-btn">Adaugă Utilizator</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active">Utilizatori Existenți</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            @foreach (var user in usersList)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@Url.Content("~/Images/" + user.Image)">
                            <ul class="product__hover">
                                <li>@user.Level</li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>@user.Username</h6>
                            <a href="@Url.Action("DeleteUser", "Admin", new {id = user.Id})" class="add-cart">Șterge Utilizator</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>